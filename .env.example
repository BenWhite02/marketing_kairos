# Kairos Frontend Environment Variables
# Copy this file to .env and update the values as needed

# Application Environment
VITE_APP_ENV=development
VITE_APP_NAME=Kairos
VITE_APP_VERSION=1.0.0

# HADES Backend Integration - UPDATED FOR WORKING BACKEND
VITE_HADES_API_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=10000

# Authentication Configuration - UPDATED FOR HADES
VITE_AUTH_BYPASS_ENABLED=true
VITE_JWT_STORAGE_KEY=kairos-auth-token
VITE_JWT_REFRESH_BUFFER=300000

# HADES Connection Settings - NEW
VITE_HADES_HEALTH_CHECK_INTERVAL=30000
VITE_HADES_RETRY_ATTEMPTS=3
VITE_HADES_RETRY_DELAY=1000

# Default Credentials for Development - UPDATED
VITE_DEFAULT_EMAIL=admin@hades.dev
VITE_DEFAULT_PASSWORD=admin123

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_A11Y_TESTING=true
VITE_ENABLE_PWA=true

# Analytics & Monitoring
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# Development Tools
VITE_ENABLE_REACT_DEVTOOLS=true
VITE_ENABLE_ZUSTAND_DEVTOOLS=true
VITE_SHOW_PERFORMANCE_METRICS=true

# Mock Data Configuration
VITE_USE_MOCK_DATA=false
VITE_MOCK_API_DELAY=1000

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_HOSTS=localhost,127.0.0.1

# Build Configuration
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=true

# WebSocket Configuration - FOR FUTURE REAL-TIME FEATURES
VITE_WS_URL=ws://localhost:8080/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=5000

# External Services - FOR FUTURE INTEGRATIONS
VITE_SENDGRID_API_KEY=
VITE_TWILIO_ACCOUNT_SID=
VITE_STRIPE_PUBLISHABLE_KEY=

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_REPORTING_LEVEL=warn

# Performance Monitoring
VITE_PERFORMANCE_BUDGET_JS=250000
VITE_PERFORMANCE_BUDGET_CSS=100000
VITE_PERFORMANCE_BUDGET_FONTS=100000
VITE_PERFORMANCE_BUDGET_IMAGES=500000

# Accessibility
VITE_A11Y_CHECKER_ENABLED=true
VITE_A11Y_AXECORE_ENABLED=true

# Internationalization
VITE_I18N_ENABLED=false
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de

# Cache Configuration
VITE_CACHE_VERSION=1
VITE_CACHE_STRATEGY=stale-while-revalidate
VITE_CACHE_MAX_AGE=3600

# Development URLs - UPDATED FOR HADES
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_PROXY_TARGET=http://localhost:8080

# Production URLs
VITE_PROD_API_URL=https://api.kairos.app
VITE_PROD_WS_URL=wss://api.kairos.app/ws
VITE_CDN_URL=https://cdn.kairos.app